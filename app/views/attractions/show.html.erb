
<p>Name: <%= @attraction.name %><br>
Total Number of Users: <%= @attraction.users.count %><br>
Ticket Requirement: <%= @attraction.tickets %><br>
Height Requirement: <%= @attraction.min_height %><br>
Nausea Rating: <%= @attraction.nausea_rating %><br>
Happiness Rating: <%= @attraction.happiness_rating %><br></p>


<% if current_user.admin == true %>
    <p><%= link_to "Edit Attraction", edit_attraction_path %></p>
<% else %>
    <%= form_tag '/rides' do %>
        <%= hidden_field_tag  'ride[attraction_id]', @attraction.id %>
        <%= hidden_field_tag  'ride[user_id]', current_user.id %>
        <%= submit_tag  'Go on this ride' %>
    <% end %>
<% end %>