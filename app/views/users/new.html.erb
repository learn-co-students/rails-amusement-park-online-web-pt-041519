<%= form_for @user, class: "new_user" do |f| %>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %><br><Br>

    <%= f.label :height, "Height (in inches)" %>
    <%= f.text_field :height %><br><Br>

    <%= f.label :happiness, "How happy are you? (1-5 scale)" %>
    <%= f.text_field :happiness %><br><Br>

    <%= f.label :nausea, "How nauseous are you? (1-5 scale)" %>
    <%= f.text_field :nausea %><br><Br>

    <%= f.label :tickets, "How many dollars are in your pocket?" %>
    <%= f.text_field :tickets %><br><Br>

    <%= f.label :password, "Password" %>
    <%= f.text_field :password %><br><Br>

    <%= f.submit "Create User" %>
<% end %>